    @BeforeClass
    public static void oneTimeSetup() throws Exception {
       

        fileA = File.createTempFile("dataA", ".dat");
        fileB = File.createTempFile("dataB", ".dat");
        fileC = File.createTempFile("dataC", ".dat");

        writeData(fileA);
        writeData(fileB);
        writeData2(fileC);
     

        fileA.deleteOnExit();
        fileB.deleteOnExit();
        fileC.deleteOnExit();
        A = "'" + fileA.getPath() + "'";
        B = "'" + fileB.getPath() + "'";
        C = "'" + fileC.getPath() + "'";
